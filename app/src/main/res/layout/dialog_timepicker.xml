<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <NumberPicker
        android:id="@+id/picker_timepicker"
        android:layout_width="63dp"
        android:layout_height="124dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/TimePickerTheme"/>

    <NumberPicker
        android:id="@+id/hourpicker_timepicker"
        android:layout_width="63dp"
        android:layout_height="124dp"
        android:theme="@style/TimePickerTheme"
        app:layout_constraintStart_toEndOf="@+id/picker_timepicker"
        app:layout_constraintTop_toTopOf="parent" />


    <NumberPicker
        android:id="@+id/minutepicker_timepicker"
        android:layout_width="63dp"
        android:layout_height="124dp"
        android:theme="@style/TimePickerTheme"
        app:layout_constraintStart_toEndOf="@+id/hourpicker_timepicker"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>