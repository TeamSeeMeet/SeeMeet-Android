<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.friend.AddFriendActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_friend_add_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray06"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/tv_friend_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:text="@string/friend_add"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_friend_add_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:src="@drawable/ic_close_friend"
            app:layout_constraintBottom_toBottomOf="@+id/tv_friend_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_friend_add" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/et_search_friend_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/selector_search_friend"
        android:hint="@string/friend_add_search"
        android:paddingStart="46dp"
        android:paddingVertical="16dp"
        android:textSize="14sp"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_friend_add_top_bar" />

        <ImageView
            android:id="@+id/iv_search_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_friend_id"
            app:layout_constraintStart_toStartOf="@+id/et_search_friend_id"
            app:layout_constraintTop_toTopOf="@+id/et_search_friend_id" />

        <ImageView
            android:id="@+id/iv_friend_id_remove_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_btn_remove"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_friend_id"
            app:layout_constraintEnd_toEndOf="@+id/et_search_friend_id"
            app:layout_constraintTop_toTopOf="@+id/et_search_friend_id" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_friend_search_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="35dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_search_friend_id" >



        <ImageView
            android:id="@+id/iv_search_profile_image"
            android:layout_marginVertical="13dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_img_profile" />

            <TextView
                android:id="@+id/tv_search_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/iv_search_profile_image"
                app:layout_constraintTop_toTopOf="@+id/iv_search_profile_image"
                tools:text="김준희" />

            <TextView
                android:id="@+id/tv_search_friend_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:textColor="@color/gray04"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_search_profile_image"
                app:layout_constraintStart_toStartOf="@+id/tv_search_friend_name"
                app:layout_constraintTop_toBottomOf="@id/tv_search_friend_name"
                tools:text="joon13579@sookmyung.ac.kr" />

        <ImageView
            android:id="@+id/iv_add_friend_list"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/selector_add_friend" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_search_friend_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textColor="@color/gray04"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_search_friend_id"
            tools:text="검색 결과가 없습니다." />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
