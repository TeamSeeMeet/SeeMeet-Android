<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_noti_send_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginBottom="25dp"
    android:background="@drawable/rectangle_white_20"
    android:elevation="10dp">


    <TextView
        android:id="@+id/tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/noti_send"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/pink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_send_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="@string/noti_send_day"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_send" />

    <TextView
        android:id="@+id/tv_send_msg_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/noti_send_msg_wait"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_send"
        app:layout_constraintStart_toStartOf="@id/tv_send"
        />
    <TextView
        android:id="@+id/tv_send_msg_wait_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:text="@string/noti_send_msg_wait_num"
        android:textColor="@color/pink"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_send"
        app:layout_constraintStart_toEndOf="@id/tv_send_msg_wait"
        />

    <TextView
        android:id="@+id/tv_send_msg_wait2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/noti_send_msg_wait2"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_send"
        app:layout_constraintStart_toEndOf="@id/tv_send_msg_wait_num"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_send_friend_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_send_msg_wait"
        tools:listitem="@layout/item_notification_send_friend_list"
        tools:itemCount="3"/>



</androidx.constraintlayout.widget.ConstraintLayout>